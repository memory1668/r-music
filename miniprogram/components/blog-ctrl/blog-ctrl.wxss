/* components/blog-ctrl/blog-ctrl.wxss */
@import './iconfont.wxss';

.ctrl {
  display: flex;
  align-items: center;
  background-color: #fff;
  height: 100%;
}

.ctrl-item {
  flex: 1;
  text-align: center;
  color: rgba(40, 47, 60, 0.8);
  font-size: 26rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ctrl-item .icon {
  margin-right: 12rpx;
  font-size: 32rpx;
}

.ctrl-item .text {
  font-size: 32rpx;
}

.share-btn {
  background-color: #fff;
  color: rgba(40, 47, 60, 0.8);
  height: 100%;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.share-btn::after{
  display: none;
}

.share-hover{
  border: 0
}