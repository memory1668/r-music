.align-items-center {
  display: flex;
  align-items: center;
}

.detail-container {
  height: 320rpx;
  filter: blur(40rpx);
  opacity: 0.4;
  top: -80px;
  z-index: 1;
}

.detail-mask {
  position: absolute;
  width: 100%;
  height: 320rpx;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1;
}

.detail-img {
  width: 280rpx;
  height: 280rpx;
  margin-right: 24rpx;
  border-radius: 6rpx;
}

.detail-info {
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 320rpx;
  padding: 20rpx;
  box-sizing: border-box;
  /* align-items: center; */
}

.detail {
  flex-grow: 1;
  line-height: 60rpx;
  width: 0;

}

.detail view {
  color: #fff;
  font-size: 24rpx;
}

.detail .detail-nm {
  font-size: 36rpx;
  font-weight: 400;
}

.list {
  background-color: #fff;
}

.list-header {
  display: flex;
  align-items: center;
  padding: 0 34rpx;
  background-color: #fff;
  /* position: fixed; */
  box-shadow: 0 1px 2px rgba(149, 147, 147, 0.2);
  top: 0;
  left: 0;
  z-index: 2;
}

.title-container {
  flex: 1;
}

.title {
  color: #000000;
  font-size: 18px;
  font-weight: 600;
  line-height: 114rpx;
}

.list-length {
  color: #666666;
  font-size: 14px;
}

/* .playall-container{

} */

.icon-playall {
  width: 40rpx;
  height: 40rpx;
  position: relative;
  margin-right: 10rpx;
}

.play-count {
  display: flex;
  align-items: center;
}

.play-count .icon {
  width: 16px;
  height: 16px;
  margin-right: 5px;
}

.play-count .text {
  font-size: 13px;
}

.musiclist-item {
  display: flex;
  padding: 14rpx 20rpx;
  align-items: center;
}

.music-num {
  width: 42rpx;
  height: 72rpx;
  margin-right: 40rpx;
}

.musiclist-index {
  color: #888;
  font-size: 34rpx;
  width: 80rpx;
  box-sizing: border-box;
  padding-left: 10rpx;
}

.musiclist-info {
  flex-grow: 1;
  /* 保证宽度正确分配 */
  width: 0;
}

.musiclist-name {
  font-size: 34rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
}

.musiclist-alia {
  color: #888;
}

.musiclist-singer {
  color: #888;
  font-size: 24rpx;
}

.playing .playing-text {
  color: #fda420;
}

.icon-totop {
  position: fixed;
  z-index: 9999;
  right: 20px;
  bottom: 20vh;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
