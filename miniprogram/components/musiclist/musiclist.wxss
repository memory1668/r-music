.align-items-center {
  display: flex;
  align-items: center;
}

.list {
  background-color: #fff;
}

.list-header {
  display: flex;
  align-items: center;
  padding: 0 34rpx;
  background-color: #fff;
  /* position: fixed; */
  box-shadow: 0 1px 2px rgba(149, 147, 147, 0.2);
  top: 0;
  left: 0;
  z-index: 2;
}

.title-container {
  flex: 1;
}

.title {
  color: #000000;
  font-size: 18px;
  font-weight: 600;
  line-height: 114rpx;
}

.list-length {
  color: #666666;
  font-size: 14px;
}

.icon-playall {
  width: 40rpx;
  height: 40rpx;
  position: relative;
  margin-right: 10rpx;
}

.musiclist-item {
  display: flex;
  padding: 14rpx 20rpx;
  align-items: center;
}

.music-num {
  width: 42rpx;
  height: 72rpx;
  /* margin-right: 40rpx; */
}

.musiclist-index {
  color: #888;
  font-size: 34rpx;
  min-width: 60rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.index-image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 5px;
  display: block;
}

.musiclist-info {
  flex-grow: 1;
  /* 保证宽度正确分配 */
  width: 0;
}

.musiclist-name {
  font-size: 34rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
}

.musiclist-alia {
  color: #888;
}

.musiclist-singer {
  color: #888;
  font-size: 24rpx;
}

.playing .playing-text {
  color: #fda420;
}

.icon-totop {
  position: fixed;
  z-index: 9999;
  right: 20px;
  bottom: 20vh;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
