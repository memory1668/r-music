.blog {
  padding: 20rpx;
  background-color: #fff;
}

.blog-title {
  display: flex;
}

.audio-container{
  margin: 20rpx 0;
}

.nickname {
  font-size: 18px;
}

.blog-time {
  font-size: 12px;
  color: #5a5858ce;
  margin-top: 5rpx;
}

.blog-content {
  font-size: 16px;
  margin: 20rpx 0;
}

.blog-portrait {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.blog-img {
  display: flex;
  flex-wrap: wrap;
}

.img {
  display: block;
  width: 230rpx;
  height: 230rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.blog-img .img:nth-child(3n){
  margin-right: 0;
}