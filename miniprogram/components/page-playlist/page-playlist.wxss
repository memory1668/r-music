image {
  display: block;
}
.swiper {
  height: 272rpx;
}

.img {
  width: 704rpx;
  height: 100%;
  border-radius: 10px;
  display: block;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.search-hot {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-top: 25px;
}

.search-container {
  flex: 1;
}

.charts-container {
  margin-left: 40rpx;
  margin-right: 20rpx;
}

.charts-image {
  width: 50rpx;
  height: 50rpx;
}

.history-container {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.history-image {
  width: 50rpx;
  height: 50rpx;
}

.music-entrance {
  padding: 34rpx 51rpx;
  display: flex;
  justify-content: space-between;
}

.ent-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.image-container {
  width: 118rpx;
  height: 118rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 1px 27px 0px rgba(4, 0, 0, 0.12);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ent-item .text {
  color: #333333;
  font-size: 14px;
  margin-top: 24rpx;
}

.recommend .icon {
  width: 49rpx;
  height: 58rpx;
}

.new .icon {
  width: 51rpx;
  height: 58rpx;
}

.album .icon {
  width: 54rpx;
  height: 54rpx;
}

.singer .icon {
  width: 58rpx;
  height: 49rpx;
}

