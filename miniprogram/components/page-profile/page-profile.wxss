.body{
  background: #f1f1f1;
  width: 100%;
  height: 100%;
}

.profile-header {
  background-image: url(https://wx3.sinaimg.cn/mw690/dc5ffc79gy1gcdjaq50kvj20we0p8wt9.jpg);
  background-size: cover;
  height: 480rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.6);
}

.image-container{
  width: 100%;
  height: 480rpx;
  position: fixed;
  z-index:-1;
  top: 0;
  left: 0
}

.image-container image{
  width: 100%;
  height: 100%;
}

.avatar-url {
  width: 200rpx;
  height: 200rpx;
  display: block;
  overflow: hidden;
  border: 6rpx solid #fff;
  border-radius: 50%;
}

.nav {
  margin: 40rpx 30rpx;
  background: #fff;
  border-radius: 5px;
}

.content {
  display: flex;
  align-items: center;
  border-bottom: 1px solid  rgb(246, 244, 244);
  padding: 20rpx 50rpx 20rpx 15rpx;
}

.item-icon {
  color: #ea702e;
  font-size: 22px;
  margin-right: 20rpx;
}

.text{
  font-size: 14px;
}

.icon-xiangyou {
  flex: 1;
  text-align: right;
  color: #5f5c5c;
}