.header-container {
  height: 320rpx;
  filter: blur(40rpx);
  opacity: 0.4;
  top: -80px;
  z-index: 1;
}

.header-mask {
  position: absolute;
  width: 100%;
  height: 320rpx;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1;
}
.album-info-container {
  width: 100%;
  height: 320rpx;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
}
.album-item{
  margin-left: 30rpx;
  margin-right: 45rpx;
}
.album-info{
  color: #FFFFFF;
}
.al-name{
  font-size: 20px;
  margin-bottom: 30rpx;
}
.singer {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  font-size: 14px;
}
.avatar {
  width: 35rpx;
  height: 35rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.publish-time{
  font-size: 12px;
}