<view class="album-item-container">
	<view class="album-item">
		<!-- 专辑封面 -->
		<image class="cover" src="{{album.picUrl}}"></image>
		<!-- 专辑名称 -->
		<text wx:if="{{album.name}}" class="name">{{album.name}}</text>
	</view>
	<!-- 唱片背景 -->
	<image class="album-background" src="/images/playlist-background.png"></image>
</view>