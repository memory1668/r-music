page {
  background-color: #f1f1f1;
}

.tab {
  padding: 20rpx;
  margin-top: 20rpx;
  background-color: #fff;
}

.comment-list {
  background-color: #fff;
}

.comment {
  padding: 20rpx;
  border-top: 1px solid rgb(246, 244, 244);
}

.comment-title {
  display: flex;
  align-items: center;
}

.comment-protrait {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.comment-nickname {
  font-size: 15px;
}

.comment-content {
  margin: 10rpx 0;
}

.create-time {
  font-size: 12px;
  color: #5a5858ce;
}

.blog-control {
  position: fixed;
  bottom: 0;
  width: 100%;
}