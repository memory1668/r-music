.album-item{
  display: flex;
  align-items: center;
  padding: 14rpx 20rpx;
}
.album-cover{
  margin-right: 20rpx;
  position: relative;
  padding-right: 14rpx;
}
.cover{
  width: 80rpx;
  height: 80rpx;
  display: block;
  border-radius: 5px;
  background-color: #f5f5f5;
}
.album-background{
  width: 60rpx;
  height: 60rpx;
  display: block;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  z-index: -1;
}
.album-name{
   font-size: 34rpx;
   color: #333;
   overflow: hidden;
   text-overflow: ellipsis;
   white-space: nowrap;
   margin-bottom: 10rpx;
}
.publish-time{
  color: #888;
  font-size: 24rpx;
}
.album-info{
  flex-grow: 1;
   /* 保证宽度正确分配 */
   width: 0;
}