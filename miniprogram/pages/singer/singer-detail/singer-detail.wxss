page {
  height: 100%;
}

.swiper {
  height: 100%;
}

.tab {
  display: flex;
  align-items: center;
}

.tab-hide{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
  width: 100%;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background-color: #FFFFFF;
  /* background-color: #999999; */
}

.tab-text {
  padding-bottom: 10rpx;
  color: #666666;
}
.active{
  border-bottom: 2px solid #ffbe5a;
  color: #000000;
}
